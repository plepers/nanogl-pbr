{
  "name": "nanogl-pbr",
  "version": "2.4.0-beta.3",
  "description": "pbr material for nanogl",
  "main": "pbr.js",
  "scripts": {
    "build": "node tools/make_templates.js",
    "testxx": "jshint *.js && jshint lib/*.js && karma start",
    "test": "tsc && karma start",
    "gztest": "browserify standard.js -o gztest.js && uglifyjs --screw-ie8 -m -c warnings=false -o gztest.min.js -- gztest.js && gzip -k -9 gztest.min.js && stat -f%z gztest.min.js.gz && rm ./*gztest*"
  },
  "bin": {
    "nanoglibl": "./bin/nanoglibl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plepers/nanogl-pbr.git"
  },
  "keywords": [
    "nanogl",
    "transform",
    "matrix"
  ],
  "author": "Pierre Lepers",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/plepers/nanogl-pbr/issues"
  },
  "homepage": "https://github.com/plepers/nanogl-pbr#readme",
  "dependencies": {
    "gl-matrix": "2.3.1",
    "nanogl": "^2.3.0",
    "nanogl-camera": "^1.1.2",
    "nanogl-node": "^1.2.0",
    "nanogl-state": "^1.1.1",
    "nanogl-pf": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "expect.js": "^0.3.1",
    "karma": "^4.4.1",
    "karma-browserify": "^6.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^1.3.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^2.0.2",
    "mocha": "^6.2.2",
    "nanogl-template": "^1.0.4",
    "replace-ext": "0.0.1",
    "sinon": "^7.5.0",
    "string-template": "1.0.0",
    "stringify": "^5.2.0",
    "typescript": "^3.7.2",
    "watchify": "^3.11.1"
  },
  "browserify": {
    "transform": [
      [
        "nanogl-template",
        {
          "extensions": [
            ".vert",
            ".frag",
            ".glsl"
          ]
        }
      ],
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    ]
  }
}
