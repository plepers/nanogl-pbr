{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "outDir": "./",
    "rootDir": "./src",
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "typedocOptions": {
	  "entryPoints": "src",
	  "entryPointStrategy": "expand",
	  "out": "docs",
	  "json": "docs/data.json",
	  "githubPages": false,
    "modifierTags": ["@hidden", "@resolveTypeof"]
  }
}